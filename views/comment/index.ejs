<section class="comments">
   <h1 class="heading">Your comments</h1>
   <div class="show-comments">
      <% if (comments && comments.length > 0) { %>
      <% comments.forEach(comment => { %>
      <% const content = comment.content; %>
      <div class="box <%= comment.user_id === user.id ? 'order:-1' : '' %>">
         <div class="content"><span><%= comment.date %></span>
            <p> - <%= comment.title %> - </p>
            <a href="/watch/<%= comment.content_id %>">view content</a></div>
         <p class="text"><%= comment.comment %></p>

         <% if (comment.user_id === user.id) { %> 
            <a href="/comments/edit/<%= comment.id  %>" class="inline-option-btn">
               edit comment
            </a>
            <a href="/comments/delete/<%= comment.id  %>" class="inline-delete-btn"
               onclick="return confirm('delete this comment?');"
               >
               delete comment
            </a>
         <% } %>
      </div>
      <% }) %>
      <% } else { %>
         <p class="empty">No comments added yet!</p>
      <% } %>
      </div>
   
</section>

<!-- comments section ends -->


